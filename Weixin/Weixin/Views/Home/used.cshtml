@model Weixin.Models.QRViewModel
@{
    ViewBag.Title = "wx";
}

<h2>Used</h2>
<fieldset>
    <legend>Resource</legend>
   
    <div class="display-field">
        <img src="@Href(Model.UserPicUrl)" /> 
        @Html.DisplayFor(model => model.UserName)
    </div>
    <div class="display-label">
         @Html.DisplayNameFor(model => model.CreateTime)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.CreateTime)
    </div>
     <div class="display-label">
         @Html.DisplayNameFor(model => model.UpdateTime)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.UpdateTime)
    <div class="display-label">
         @Html.DisplayNameFor(model => model.TotalSize)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.TotalSize)
    </div>
    <div class="display-field">
        @Html.DisplayNameFor(model => model.UsedSize)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.UsedSize)
    </div>
    <div class="display-field">
        @Html.DisplayNameFor(model => model.Content)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Content)
    </div>
    <div class="display-field">
        @Html.DisplayNameFor(model => model.Resources)
    </div>
    <div class="display-field">
        @foreach (var r in Model.Resources)
        {
            <p>@r.Url @r.Type @r.Size</p>
            <!--判断type调用不同的显示-->
            <img src=@Href(r.Url) alt="" width="100" height="100"></img>
        }
    </div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.QRCodeId }) |
    @Html.ActionLink("Back to List", "Index")
</p>